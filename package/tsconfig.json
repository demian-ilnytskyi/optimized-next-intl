{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "@intl-config": [
        "./src/types/intl_config"
      ],
      "@locale-file": [
        "./src/types/locale_file"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts"
  ]
}